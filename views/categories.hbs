{{#unless categories}}
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
{{/unless}}

<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />

    <table>
      <thead>
        <tr>
          <th>Category ID</th>
          <th>Category Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <td>{{id}}</td>
            <td>{{category}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
       
  </div>
</div>