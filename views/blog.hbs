<div class="row">
    <section class="main col-md-9">
        {{#if data.posts}}
        <article>
            <h2>{{data.post.title}}</h2>
            <img src="{{data.post.featureImage}}" alt="feature Image" style="width:100%" />
            <br /><br />
            {{#safeHTML data.post.body}}{{/safeHTML}}
            <br /><br />
            <strong>{{data.post.category}}</strong> 3<br />
            <strong>{{data.post.postDate}}</strong>Last updated: 2023-03-20
        </article>
        {{else}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
            <p>Please try another Post / Category</p>
        </div>

        {{/if}}
    </section>
    <aside class="col-md-3">
        <br /><br />
        {{#if data.posts}}
<h4>Posts</h4>
        {{#each posts}}
        <ul class="list-group">
            <a href="/blog/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
            {{/each}}
        </ul>
        {{/if}}


        {{#if data.posts}}
        <h4>Categories</h4>
        <ul class="list-group">
            {{#each data.categories}}
            <a href="/blog?category={{id}}" class="list-group-item">{{category}}</a>
            {{/each}}
        </ul>
        {{/if}}
   Â </aside>
</div>